{
  "name": "fast-react-static-renderer-app",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "eslint": "eslint src",
    "prettier": "prettier --check src",
    "depcheck": "depcheck .",
    "dev": "next dev",
    "build": "next build && next export",
    "fetch-catalog": "NODE_OPTIONS='-r dotenv/config -r cross-fetch/polyfill' ts-node ./scripts/catalog/fetch-contentful.ts"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@bitovi/eslint-config/react",
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link",
            "ExternalLink"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^15.11.1",
    "@contentful/rich-text-types": "^15.12.1",
    "lazysizes": "^5.3.2",
    "next": "^12.1.6",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@bitovi/eslint-config": "^1.2.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.8",
    "cross-fetch": "^3.1.5",
    "depcheck": "^1.4.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  }
}
